@model IEnumerable<MVCReviewSiteProject.Models.Game>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-md-3 bg-default">
            <div id="thumb" class="thumbnail">
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.NameOfGame)</h3>
                    <p>Reviewed by: @Html.DisplayFor(modelItem => item.ReviewedBy)</p>

                    @Html.ActionLink("Go to review!", "Details", new { id = item.ID }, new {@class = "btn btn-danger", role="button"})
                </div>
            </div>
        </div>
        @*if(item.ID == 1) Messing with the idea of having images.
        {
          <img src="~/images/Super_Mario_Bros._3_coverart.png"  class="img-responsive" />
        }*@
    }
</div>



